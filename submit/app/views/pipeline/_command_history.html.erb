<b>Command History</b><br/>

<% 
  short_history = @project.commands.reverse[0...10]
  short_history = @project.commands.all.reject { |cmd| cmd.status == Command::Status::QUEUED }.reverse[0...10]
  short_history = short_history + Array.new(10-short_history.size)
%>
<% short_history.each do |command| %>
  <% if command.nil? then %>
    ...
  <% else %>
    <%= command.class.name %>: 
    <%= command.status %>
    <%= link_to "details", { :action => :command_status, :id => command } %>
  <% end %>
  <br/>
<% end %>
