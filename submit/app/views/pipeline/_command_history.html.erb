<b>Command History:</b>
<% 
  short_history = @project.commands.reverse[0...10]
  short_history = @project.commands.all.reject { |cmd| cmd.status == Command::Status::QUEUED }.reverse[0...10]
  short_history = short_history + Array.new(10-short_history.size)
%>
  <% short_history.each do |command| %>
    <% next if command.nil? %>
    <div style="margin-left: 4px; padding-top: 0px;">
      <%= command.name %>: 
      <span style="<%= Command::Status::is_failed_state(command.status) ? "color: red" : "color: black" %>"><%= command.status %></span>
      <span style="font-size: 80%; nowrap;">
        <%= link_to "show output", { :action => :command_status, :id => command }, :popup => ["command_details", "height=400,width=680,location=0,address=0,scrollbars=1"], :target => "_blank" %>
      </span>
    </div>
    <% end %>
    <% if @project.commands.length > short_history.length %>
    <div style="margin-left: 4px; padding-top: 0px;">
      ... and <%=link_to((@project.commands.length-10).to_s+" more",  { :action => :full_command_history, :id => @project }) %>.
    </div>
    <% end %>
